#include <stdio.h>

int main() {
    int a, b, max;

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    // Using ternary operator to find the maximum
    max = (a > b) ? a : b;

    printf("The greater number is: %d\n", max);

    // Another example: check if a number is even or odd
    const char* result = (a % 2 == 0) ? "even" : "odd";
    printf("The number %d is %s.\n", a, result);

    return 0;
}